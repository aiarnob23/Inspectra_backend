generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

// --------------------------------------
// ENUMS
// --------------------------------------

enum UserRole {
  admin //platform owner
  subscriber //company owner / manager
  employee //employee
  user //temp
}

enum AccountStatus {
  active
  inactive
  suspended
  pending_verification
}

enum OTPType {
  email_verification
  login_verification
  password_reset
  two_factor
}

enum SubscriptionPlanType {
  basic
  pro
  enterprise
}

enum SubscriptionStatus {
  active
  expired
  cancelled
  suspended
}

enum SubscriptionCancelReason {
  upgrade
  downgrade
  expired
  cancelled
}

enum PaymentStatus {
  pending
  success
  failed
  refunded
}

enum InspectionFrequency {
  one_time
  weekly
  monthly
  quarterly
  yearly
}

enum InspectionStatus {
  pending
  completed
  missed
  rescheduled
}

//
// --------------------------------------
// AUTH MODELS
// --------------------------------------
//

model User {
  id              String        @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  email           String        @unique
  username        String?       @unique
  firstName       String
  lastName        String?
  displayName     String?
  role            UserRole      @default(subscriber)
  status          AccountStatus @default(pending_verification)
  password        String
  emailVerifiedAt DateTime?
  avatarUrl       String?

  //---LMS fields ---
  isDeleted   Boolean   @default(false)
  lastLoginAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @default(now()) @updatedAt
  deletedAt   DateTime?

  otps       OTP[]
  subscriber Subscriber?
}

model OTP {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  identifier String
  code       Int
  type       OTPType
  expiresAt  DateTime
  verified   Boolean  @default(false)
  attempts   Int      @default(0)
  userId     String?  @db.Uuid
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
}

// =====================================================
// SUBSCRIPTION , MEMBERSHIP  & ACCESS CONTROL
// =====================================================
model Plan {
  id    String               @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  type  SubscriptionPlanType
  price Float

  maxClients   Int?
  maxEmployees Int?
  maxAssets    Int?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  features            PlanFeature[] //for new subscriber's
  memberships         Membership[]
  membershipHistories MembershipHistory[]
  payments            Payment[]
}

model Feature {
  id          String          @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  key         String
  name        String
  description String?

  plans      PlanFeature[]
  memberships MembershipFeature[]
}

model PlanFeature {
  id        String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  planId    String @db.Uuid
  featureId String @db.Uuid
  enabled   Boolean @default(true)

  plan    Plan    @relation(fields: [planId], references: [id], onDelete: Cascade)
  feature Feature @relation(fields: [featureId], references: [id], onDelete: Cascade)

  @@unique([planId, featureId])
}

model Membership {
  id           String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  subscriberId String @unique @db.Uuid
  planId       String @db.Uuid

  startDate DateTime  @default(now())
  endDate   DateTime?
  isActive  Boolean   @default(true)

  subscriber Subscriber          @relation(fields: [subscriberId], references: [id])
  plan       Plan                @relation(fields: [planId], references: [id])
  features   MembershipFeature[] //snapshot -> existing subscriber's features
}

model MembershipFeature {
  id           String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  membershipId String  @db.Uuid
  featureId    String  @db.Uuid
  enabled      Boolean @default(true)

  membership Membership @relation(fields: [membershipId], references: [id], onDelete: Cascade)
  feature    Feature    @relation(fields: [featureId], references: [id])

  @@unique([membershipId, featureId])
}

model MembershipHistory {
  id           String                   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  subscriberId String                   @db.Uuid
  planId       String                   @db.Uuid
  startDate    DateTime
  endDate      DateTime
  reason       SubscriptionCancelReason

  subscriber Subscriber @relation(fields: [subscriberId], references: [id])
  plan       Plan       @relation(fields: [planId], references: [id])

  createdAt DateTime @default(now())

  @@index([subscriberId])
}

model Subscriber {
  id          String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  companyName String?
  address     String?
  phone       String?

  userId String @unique @db.Uuid
  user   User   @relation(fields: [userId], references: [id])

  membership Membership?

  clients     Client[]
  employees   Employee[]
  assets      Asset[]
  inspections Inspection[]
  payments    Payment[]

  createdAt           DateTime            @default(now())
  updatedAt           DateTime            @updatedAt
  membershipHistories MembershipHistory[]
}

// =====================================================
// PAYMENT
// =====================================================
model Payment {
  id           String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  subscriberId String @db.Uuid
  planId       String @db.Uuid

  amount   Float
  currency String        @default("BDT")
  provider String //stripe | sslcommerz
  status   PaymentStatus @default(pending)

  transactionId String?
  paidAt        DateTime?

  subscriber Subscriber @relation(fields: [subscriberId], references: [id])
  plan       Plan       @relation(fields: [planId], references: [id])

  createdAt DateTime @default(now())
}

// =====================================================
// CLIENT , ASSET & EMPLOYEE
// =====================================================

model Client {
  id      String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name    String
  company String?
  email   String
  phone   String?
  address String?

  subscriberId String     @db.Uuid
  subscriber   Subscriber @relation(fields: [subscriberId], references: [id])

  assets Asset[]

  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  deletedAt   DateTime?
  inspections Inspection[]
}

model Asset {
  id           String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  name         String
  type         String
  serialNumber String?

  clientId     String @db.Uuid
  subscriberId String @db.Uuid

  client     Client     @relation(fields: [clientId], references: [id])
  subscriber Subscriber @relation(fields: [subscriberId], references: [id])

  inspections Inspection[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Employee {
  id    String  @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  e_id  String?
  name  String?
  email String?
  phone String?

  subscriberId String     @db.Uuid
  subscriber   Subscriber @relation(fields: [subscriberId], references: [id])

  assignments InspectionAssignment[]

  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  inspectionReports InspectionReport[]
}

// =====================================================
// INSPECTION & REPORTING
// =====================================================
model Inspection {
  id String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid

  subscriberId String @db.Uuid
  clientId     String @db.Uuid
  assetId      String @db.Uuid

  frequency InspectionFrequency
  status    InspectionStatus    @default(pending)

  scheduledAt DateTime
  nextDueAt   DateTime?

  subscriber Subscriber @relation(fields: [subscriberId], references: [id])
  client     Client     @relation(fields: [clientId], references: [id])
  asset      Asset      @relation(fields: [assetId], references: [id])

  assignments InspectionAssignment[]
  reports     InspectionReport[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model InspectionAssignment {
  id           String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  inspectionId String @db.Uuid
  employeeId   String @db.Uuid

  inspection Inspection @relation(fields: [inspectionId], references: [id], onDelete: Cascade)
  employee   Employee   @relation(fields: [employeeId], references: [id], onDelete: Cascade)

  @@unique([inspectionId, employeeId])
}

model InspectionReport {
  id           String @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  inspectionId String @db.Uuid
  uploadedById String @db.Uuid

  fileUrl String
  remarks String?

  inspection Inspection @relation(fields: [inspectionId], references: [id])
  uploadedBy Employee   @relation(fields: [uploadedById], references: [id])

  createdAt DateTime @default(now())
}
